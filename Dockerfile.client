FROM node:14

# Create app directory
WORKDIR /usr/src/app

# Install app dependencies
COPY client/package*.json ./
RUN npm install

# Bundle app source
COPY client/ .

# Build the app
RUN npm run build

# Install `serve` to serve the app on port 80
RUN npm install -g serve

EXPOSE 80
CMD [ "serve", "-s", "dist", "-l", "80" ]