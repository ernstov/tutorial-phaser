FROM node:14

# Create app directory
WORKDIR /usr/src/app

# Install app dependencies
COPY client/package*.json ./
RUN npm install

# Bundle app source
COPY client/ .

# Build the app
RUN npm run build

# Install `serve` to serve the app on port 80
RUN npm install -g serve

# Configure the container to run `serve`, mapping port 80 to the outside world
EXPOSE 80
CMD [ "serve", "-s", "dist" ]
